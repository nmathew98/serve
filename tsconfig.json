{
	"compilerOptions": {
		"module": "commonjs",
		"target": "esnext",
		"lib": ["ESNext"],
		"experimentalDecorators": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"noUncheckedIndexedAccess": true,
		"allowSyntheticDefaultImports": true,
		"incremental": true,
		"removeComments": true,
		"strict": true,
		"useDefineForClassFields": true,
		"moduleResolution": "node",
		"sourceMap": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"baseUrl": ".",
		"paths": {
			"$internals*": ["src/internals*"],
			"$entities*": ["src/entities*"],
			"$app*": ["src/app*"],
			"$graphql/types*": ["src/external/routes/api/types*"],
			"$routes*": ["src/external/routes*"],
			"*": ["node_modules/*"]
		}
	},
	"include": ["src"]
}
