{
	"name": "@skulpture/serve",
	"version": "5.8.1",
	"description": "A lightweight starting point for API applications",
	"main": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"type": "commonjs",
	"bin": "./dist/scripts/scripts.js",
	"keywords": [
		"h3",
		"backend",
		"framework",
		"lightweight",
		"extensible",
		"api",
		"node",
		"application",
		"http2",
		"spdy"
	],
	"scripts": {
		"build": "swc ./src -d dist --delete-dir-on-start && tsc --emitDeclarationOnly --declaration --outDir dist/types",
		"lint": "eslint --ext .ts --ignore-path .gitignore . --fix",
		"format": "prettier .  --write",
		"test": "jest src/ --coverage --verbose",
		"test.watch": "jest src/ --watch --coverage --verbose",
		"prepare": "husky install"
	},
	"author": "Naveen Mathew",
	"license": "MIT",
	"devDependencies": {
		"@swc/jest": "^0.2.21",
		"@types/cors": "^2.8.12",
		"@types/jest": "^28.1.0",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^17.0.39",
		"@types/spdy": "^3.4.5",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.27.0",
		"@typescript-eslint/parser": "^5.27.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"husky": "^8.0.1",
		"jest": "^28.1.0",
		"prettier": "^2.6.2"
	},
	"dependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.196",
		"c12": "^0.2.7",
		"consola": "^2.15.3",
		"cors": "^2.8.5",
		"graphql": "^16.5.0",
		"graphql-ws": "^5.8.2",
		"h3": "^0.7.8",
		"helmet": "^5.1.0",
		"module-alias": "^2.2.2",
		"scule": "^0.2.1",
		"spdy": "^4.0.2",
		"typescript": "^4.7.3",
		"ws": "^8.7.0"
	}
}
