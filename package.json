{
	"name": "@skulpture/serve",
	"version": "5.4.2",
	"description": "A lightweight starting point for API applications",
	"main": "dist/index.js",
	"types": "dist/types/src/index.d.ts",
	"type": "commonjs",
	"bin": "./dist/scripts/scripts.js",
	"keywords": [
		"h3",
		"backend",
		"framework",
		"lightweight",
		"extensible",
		"api",
		"node",
		"application"
	],
	"scripts": {
		"build": "tsc --emitDeclarationOnly --declaration --outDir dist/types && swc ./src -d dist",
		"lint": "eslint --ext .ts --ignore-path .gitignore . --fix",
		"format": "prettier .  --write",
		"test": "jest src/ --coverage --verbose",
		"test.watch": "jest src/ --watch --coverage --verbose"
	},
	"author": "Naveen Mathew",
	"license": "MIT",
	"devDependencies": {
		"@types/cli-color": "^2.0.2",
		"@types/cors": "^2.8.12",
		"@types/jest": "^27.4.1",
		"@types/node": "^17.0.30",
		"@types/node-emoji": "^1.8.1",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.21.0",
		"@typescript-eslint/parser": "^5.21.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.6.2",
		"typescript": "^4.6.4"
	},
	"dependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.173",
		"@swc/jest": "^0.2.20",
		"cli-color": "^2.0.2",
		"cors": "^2.8.5",
		"graphql": "^16.4.0",
		"graphql-ws": "^5.8.1",
		"h3": "^0.7.6",
		"helmet": "^5.0.2",
		"jest": "^28.0.3",
		"node-emoji": "^1.11.0",
		"winston": "^3.7.2",
		"ws": "^8.5.0"
	}
}
