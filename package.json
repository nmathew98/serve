{
	"name": "@skulpture/serve",
	"version": "5.5.4",
	"description": "A lightweight starting point for API applications",
	"main": "dist/index.js",
	"types": "dist/types/index.d.ts",
	"type": "commonjs",
	"bin": "./dist/scripts/scripts.js",
	"keywords": [
		"h3",
		"backend",
		"framework",
		"lightweight",
		"extensible",
		"api",
		"node",
		"application"
	],
	"scripts": {
		"build": "tsc --emitDeclarationOnly --declaration --outDir dist/types && swc ./src -d dist",
		"lint": "eslint --ext .ts --ignore-path .gitignore . --fix",
		"format": "prettier .  --write",
		"test": "jest src/ --coverage --verbose",
		"test.watch": "jest src/ --watch --coverage --verbose"
	},
	"author": "Naveen Mathew",
	"license": "MIT",
	"devDependencies": {
		"@types/cors": "^2.8.12",
		"@types/jest": "^27.5.0",
		"@types/module-alias": "^2.0.1",
		"@types/node": "^17.0.31",
		"@types/ws": "^8.5.3",
		"@typescript-eslint/eslint-plugin": "^5.22.0",
		"@typescript-eslint/parser": "^5.22.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-prettier": "^4.0.0",
		"prettier": "^2.6.2"
	},
	"dependencies": {
		"@swc/cli": "^0.1.57",
		"@swc/core": "^1.2.176",
		"@swc/jest": "^0.2.20",
		"c12": "^0.2.7",
		"consola": "^2.15.3",
		"cors": "^2.8.5",
		"graphql": "^16.4.0",
		"graphql-ws": "^5.8.1",
		"h3": "^0.7.6",
		"helmet": "^5.0.2",
		"jest": "^28.0.3",
		"module-alias": "^2.2.2",
		"scule": "^0.2.1",
		"typescript": "^4.6.4",
		"ws": "^8.6.0"
	}
}
